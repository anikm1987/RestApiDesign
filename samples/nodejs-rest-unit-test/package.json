{
  "name": "nodejs-rest-unit-test",
  "version": "1.0.0",
  "description": "Sample REST example with jest unit test using node.js",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "dev": "nodemon index.js",
    "postinstall": "cd ../.. && husky install samples/nodejs-rest-unit-test/.husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anikm1987/RestApiDesign.git"
  },
  "keywords": [
    "REST",
    "nodejs"
  ],
  "author": "Aniket Mukherjee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anikm1987/RestApiDesign/issues"
  },
  "homepage": "https://github.com/anikm1987/RestApiDesign/samples/nodejs-rest#readme",
  "dependencies": {
    "apicache": "^1.5.3",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run test"
    }
  }
}
